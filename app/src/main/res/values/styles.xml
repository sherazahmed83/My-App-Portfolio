<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:singleLine">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textColor">#ff1100f0</item>
        <item name="android:shadowColor">#ffdfeaf1</item>
        <item name="android:onClick">sendMessage</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="MyAppButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/button_selector_myapp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#fff4ab47</item>
    </style>

</resources>
